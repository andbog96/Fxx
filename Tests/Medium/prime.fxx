(func isPrime (N)
    (prog ()
        (func helper (N divisor)
            (cond (greater (times divisor divisor) N)
                true
                (cond (equal (mod N divisor) 0)
                    false
                    (helper N (plus divisor 1))
                )
            )
        )
        (return (helper N 2))
    )
)

(isPrime 2) // true
(isPrime 5) // true
(isPrime 10) // false
(isPrime 37) // true
